{
  "name": "@tic-tac-toe/backend",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "version": "0.0.0",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/sensible": "^6.0.0",
    "@prisma/client": "6.3.1",
    "@tic-tac-toe/core": "workspace:*",
    "@trpc/server": "11.0.0-rc.764",
    "bcrypt": "^5.1.1",
    "close-with-grace": "^2.2.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.0",
    "fp-ts": "^2.16.9",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "type-fest": "^4.34.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.16",
    "@tic-tac-toe/eslint-config": "workspace:*",
    "@tic-tac-toe/lint-staged-config": "workspace:*",
    "@tic-tac-toe/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "fastify-tsconfig": "^2.0.0",
    "prisma": "^6.3.1",
    "ts-node": "^10.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "concurrently --kill-others-on-fail -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm build:ts\" \"pnpm build:swc\"",
    "build:swc": "swc src -d dist --strip-leading-paths",
    "build:ts": "tsc",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TSC,SWC,App\" -c \"blue.bold,yellow.bold,red.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\" \"pnpm dev:start\"",
    "dev:start": "node --watch --watch-preserve-output $npm_package_main",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "pnpm build && node $npm_package_main",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TSC,SWC\" -c \"blue.bold,yellow.bold\" \"pnpm watch:ts\" \"pnpm watch:swc\"",
    "watch:swc": "pnpm build:swc -w",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput"
  },
  "type": "module"
}
